{
  "expo": {
    "name": "SiteLog",
    "slug": "sitelog",
    "version": "1.0.0",
    "scheme": "sitelog",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourname.sitelog",
      "infoPlist": {
      "NSCameraUsageDescription": "SiteLog needs camera access to take job site photos.",
      "NSPhotoLibraryUsageDescription": "SiteLog needs photo access to attach images to reports."
  }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourname.sitelog",
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE"]
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-document-picker",
      "@react-native-community/datetimepicker"
    ]
  }
}
